<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/21.0.2" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.client.controller.LoginController">
    <center>
        <VBox alignment="CENTER" spacing="18" BorderPane.alignment="CENTER">
            <padding>
                <Insets top="30" right="40" bottom="30" left="40"/>
            </padding>
            <Label text="Gestore Agenti" styleClass="title" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
            <Label text="Accedi con il tuo account Microsoft per continuare" wrapText="true" textAlignment="CENTER"
                   style="-fx-text-fill: #546e7a;"/>
            <Button fx:id="loginButton" text="Accedi con Microsoft" onAction="#handleLogin"
                    maxWidth="Infinity" prefWidth="280" style="-fx-background-color: #2563eb; -fx-text-fill: white;"/>
            <Label fx:id="statusLabel" text="Clicca su &quot;Accedi con Microsoft&quot; per iniziare" wrapText="true" textAlignment="CENTER"/>
            <Hyperlink fx:id="registerLink" text="Registrati" onAction="#openRegister"/>
        </VBox>
    </center>
</BorderPane>
